.container
    h2 Product List
    
    table.table.table-hover
        thead
            tr
                th Product id
                th Product Name
                th Price
                th Vendor
                th Quantity
                th Warranty
                th Actions
        tbody
            each product in products
                tr
                    td=product.p_id
                    td=product.product_name
                    td=product.price
                    td=product.vendor
                    td=product.quantity
                    td=product.waranty
                    td
                        a(href='/update/'+product._id) Edit | 
                        |
                        a(href='/remove/'+product._id) Delete
